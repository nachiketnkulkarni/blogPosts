<%- include("header") %>
<div class="addPost">
  <h1>Add post</h1>
  <div class="form">
    <form action="/add" method="POST">
      <!-- Name input -->
      <div class="form-outline mb-4">
        <label class="form-label" for="form4Example1">Title</label>
        <input
          type="text"
          name="title"
          placeholder="Enter title for post"
          id="form4Example1"
          class="form-control"
        />
      </div>

      <!-- Message input -->
      <div class="form-outline mb-4">
        <label class="form-label" for="form4Example3">Description</label>
        <textarea
          class="form-control"
          id="form4Example3"
          rows="4"
          name="description"
          placeholder="Enter post description"
        ></textarea>
      </div>

      <!-- Submit button -->
      <button
        type="submit"
        class="btn btn-primary btn-block mb-4"
        name="submit"
      >
        Create Post
      </button>
    </form>
  </div>
</div>
<%- include("footer") %>
